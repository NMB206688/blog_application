<!-- views/pages/blogs.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Blogs</title>
</head>
<body>
    <div class="container">
        <h2 class="mt-5">All Blogs</h2>
        <a href="/blogs/new" class="btn btn-success mb-3">Create New Blog</a>
        <% blogs.forEach(blog => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>
                    <p class="card-text"><%= blog.content %></p>
                    <a href="/blogs/edit/<%= blog._id %>" class="btn btn-primary">Edit</a>
                    <a href="/blogs/delete/<%= blog._id %>" class="btn btn-danger">Delete</a>
                </div>
            </div>
        <% }) %>
        <a href="/" class="btn btn-primary mt-3">Back to Home</a>
    </div>
</body>
</html>
